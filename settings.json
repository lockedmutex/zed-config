// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": true,
  "git_panel": {
    "dock": "right"
  },
  "buffer_line_height": {
    "custom": 1.62
  },
  "buffer_font_weight": 450.0,
  "use_smartcase_search": true,
  "terminal": {
    "shell": "system"
  },
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": false
  },
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "hard_tabs": false,
  "tab_size": 4,
  "minimap": {
    "max_width_columns": 105,
    "thumb_border": "full",
    "thumb": "always",
    "show": "always"
  },
  "scrollbar": {
    "axes": {
      "vertical": false
    }
  },
  "autosave": "on_focus_change",
  "icon_theme": "Catppuccin Mocha",
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 17,
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "VSCode Light+",
    "dark": "VSCode Dark Modern"
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "languages": {
    "C": {
      "format_on_save": "on",
      "preferred_line_length": 100,
      "hard_tabs": false,
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--assume-filename=.c"]
        }
      }
    },
    "JSON": {
      "preferred_line_length": 120,
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on"
    },
    "JSONC": {
      "preferred_line_length": 120,
      "hard_tabs": false,
      "tab_size": 2,
      "format_on_save": "on"
    },
    "XML": {
      "preferred_line_length": 120,
      "hard_tabs": false,
      "tab_size": 2,
      "format_on_save": "on"
    },
    "YAML": {
      "preferred_line_length": 120,
      "hard_tabs": false,
      "tab_size": 2,
      "format_on_save": "on"
    },
    "TOML": {
      "preferred_line_length": 120,
      "hard_tabs": false,
      "tab_size": 4,
      "format_on_save": "on"
    },
    "Python": {
      "preferred_line_length": 100,
      "hard_tabs": false,
      "tab_size": 2,
      "format_on_save": "on"
    }
  }
}
